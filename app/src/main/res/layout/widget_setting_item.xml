<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="56dip"
       android:orientation="vertical">

    <ImageView
        android:id="@+id/setting_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dip"
        android:scaleType="centerInside"
        tools:src="@mipmap/ic_launcher"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/setting_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:clickable="false"
        android:layout_marginRight="16dip"
        tools:checked="true"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dip"
        android:layout_toEndOf="@+id/setting_iv"
        android:layout_toLeftOf="@id/setting_checkbox"
        android:layout_toRightOf="@id/setting_iv"
        android:layout_toStartOf="@id/setting_checkbox"
        android:clipChildren="false"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/setting_title"
            style="@style/TextTitle.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Hello World"/>


        <TextView
            android:id="@+id/setting_desc"
            style="@style/TextDesc.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            tools:text="World World World"/>
    </LinearLayout>
</merge>